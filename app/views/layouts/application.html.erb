  <head>
    <title>Ballpark It | Estimates made easy.</title>
	  <meta name="Author" content="Ryan Heath" />
	  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
	  <%= stylesheet_link_tag 'base', 'application' %>
