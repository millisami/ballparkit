<ul class="estimates">
  <% @estimates.each do |estimate| %>
    <li class="<%= cycle 'odd', nil %>">
      <span class="options" style="display:none;">
        <%= link_to 'Edit', edit_estimate_path(estimate) %>
        or <%= link_to 'Delete', estimate, :method => :delete, :confirm => 'Are you sure you want to delete this estimate?' %>
      </span>
      <span class="total">
        <%= number_to_currency estimate.total %>
      </span>
      <%= link_to estimate.title, estimate %> <span class="soft">created <%= distance_of_time_in_words_to_now estimate.created_at %> ago</span>
    </li>
  <% end %>
</ul>
